package page;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class BasePage {
	WebDriver driver;
	public void initialize() //initialize the driver
	{
		System.setProperty("webdriver.chrome.driver", "C:\\Selenium\\chromedriver-win64\\chromedriver-win64\\chromedriver.exe");
		driver = new ChromeDriver();
	
	}
	public void closeDriver() //close the driver
	{
	driver.quit();	
	}
	public WebDriver getDriver() //get the driver at another page
	{
		return driver;
		
	}
	

}
